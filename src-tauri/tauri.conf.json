{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "llama-rust-desktop",
    "version": "0.0.0"
  },
  "tauri": {
    "bundle": {
      "externalBin": [
        "binaries/ffmpeg",
        "binaries/ffprobe",
        "binaries/whisper"
      ],
      "resources": ["resources/*"]
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self'; media-src 'self'; asset: https://asset.localhost"
    },
    "allowlist": {
      "protocol": {
        "asset": true,
        "assetScope": ["**/*"]
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/ffmpeg",
            "sidecar": true,
            "args": true
          },
          {
            "name": "binaries/ffprobe",
            "sidecar": true,
            "args": true
          },
          {
            "name": "binaries/whisper",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "fs": {
        "all": false,
        "exists": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeFile": true,
        "scope": ["**/*"]
      },
      "path": {
        "all": true
      }
    }
  }
}
